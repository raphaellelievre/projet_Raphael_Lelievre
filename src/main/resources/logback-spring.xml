<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender spécifique pour les virements -->
    <appender name="VIREMENT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/virements.log</file>

        <!-- Rotation des fichiers -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/virements.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%date %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger dédié -->
    <logger name="VIREMENT_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="VIREMENT_FILE"/>
    </logger>

    <!-- Console (optionnel) -->
    <root level="INFO">
    </root>

</configuration>
